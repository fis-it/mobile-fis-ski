<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="com.fis-ski.mobile-fis-ski" 
        version="1.4.0" 
        versioncode="33">
    <name>mobile.fis-ski.com</name>
    <description>Official web app of the FIS (International Ski Federation). Everything about the ski and snowboard World: Worldcup, Continental cup, every race level results, Live timing and live scoring, Calendar, News, Athletes Biographies, Cup standings.</description>
    <author href="http://www.fis-ski.com">
        FIS IT department
    </author>
    <preference name="orientation" value="both" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="stay-in-webview" value="no" />
    <preference name="show-splash-screen-spinner" value="true" />
    <gap:splash src="splash/splash.png" />
    <gap:splash src="splash/android/portrait/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="splash/android/portrait/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="splash/android/portrait/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="splash/android/portrait/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="icons/android/fis_logo-36x36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="icons/android/fis_logo-48x48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="icons/android/fis_logo-72x72.png" gap:platform="android" gap:density="hdpi" />
    <icon src="icons/android/fis_logo-96x96.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="icons/ios/fis_logo-57x57.png" width="57" height="57" />
    <icon src="icons/ios/fis_logo-72x72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/ios/fis_logo-114x114.png" width="114" height="114" />
    <icon src="icons/ios/apple-touch-icon-76x76" width="76" height="76" />
    <icon src="icons/ios/apple-touch-icon-120x120" width="120" height="120" />
    <icon src="icons/ios/apple-touch-icon-152x152" width="152" height="152" />
    <gap:splash src="splash/ios/Default.png" width="320" height="480" />
    <gap:splash src="splash/ios/Default_at_2x.png" width="640" height="960" />
    <gap:splash src="splash/ios/Default_iphone5.png" width="640" height="1136" />
    <gap:splash src="splash/ios/Default-Landscape.png" width="1024" height="768" />
    <gap:splash src="splash/ios/Default-Portrait.png" width="768" height="1024" />
    <preference name="permissions" value="none" />
    <plugin name="br.com.paveisitemas.splashscreen" source="pgb" />
    <plugin name="hu.dpal.phonegap.plugins.spinnerdialog" source="pgb" />
    <!--<preference name="FadeSplashScreen" value="true"/>-->
    <gap:plugin name="org.apache.cordova.network-information" />
    <!--<gap:plugin name="com.phonegap.plugins.childbrowser" />-->
    <!--<plugin name="com.simplec.plugins.powermanagement" source="pgb" />-->
    <plugin name="com.mediamatrixdoo.keepscreenon" spec="1.0.1" source="pgb" />
    <plugin name="ch.ti8m.documenthandler" source="pgb" />
    <plugin name="cordova-plugin-media" source="pgb" />
    <plugin name="net.bgta.phonegap.plugin.appversion" source="pgb" />
    <plugin name="com.cordova.plugin.inappbrowser.with.loading.spinner" source="pgb" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <!--<plugin name="de.appplant.cordova.plugin.background-mode" source="pgb" />-->
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.NetworkManager" />
        <param name="ios-package" value="CDVConnection" />
    </feature>
    <feature name="Media">
        <param name="android-package" value="org.apache.cordova.media.AudioHandler" />
    </feature>
<feature name="Media">
    <param name="ios-package" value="CDVSound" />
</feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <false/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>
    <access origin="*" />
</widget>
